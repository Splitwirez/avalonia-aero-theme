<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:AeroAvalonia.Demo"
             xmlns:aero="using:AeroAvalonia"
             x:Class="AeroAvalonia.Demo.App">
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
    
    <Application.Styles>
        <aero:AeroTheme />
        <Style Selector="Window,TabControl">
            <Setter Property="Transitions">
                <Transitions>
                    <BrushTransition Property="Background" Duration="{StaticResource AeroFadeDuration}" />
                </Transitions>
            </Setter>
        </Style>
    </Application.Styles>
    <Application.Resources>
        <ControlTheme x:Key="{x:Type HeaderedContentControl}"
                    TargetType="{x:Type HeaderedContentControl}"
                    BasedOn="{StaticResource GroupBox}" />
    </Application.Resources>
</Application>
